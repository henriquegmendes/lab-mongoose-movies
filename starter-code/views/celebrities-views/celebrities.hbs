<main>
  <h2>Celebrities List:</h2>

  <a href="/celebrities/new">Add new Celebrity</a>

  <div>
    <label for="celebsSearch">Filtrar Celebridades</label>
    <input type="text" name="celebsSearch" id="celebsSearch" placeholder="Digite o nome da Celebridade">
  </div>

  <ul>
    {{#each celebrities}}
      <li>
        <a href="/celebrities/{{this._id}}">{{this.name}}</a>

        <a href="/celebrities/{{this._id}}/edit">Editar Celebridade</a>

        <form action="/celebrities/{{this._id}}/delete" method="post">
          <button type="submit">Deletar Celebridade</button>
        </form>
      </li>
    {{/each}}

  </ul>
</main>

<script src="/javascripts/script.js"></script>